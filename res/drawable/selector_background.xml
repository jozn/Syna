<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="25">
    <item android:state_window_focused="false" android:drawable="@color/transparent" />
    <item android:state_focused="true" android:state_enabled="false" android:state_pressed="true" android:drawable="@r/my_yellow" />
    <item android:state_focused="true" android:state_enabled="false" android:drawable="@r/my_yellow" />
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@r/my_blue" />
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@r/my_blue" />
    <item android:state_focused="true" android:drawable="@r/my_yellow" />
    <item android:state_checked="true" android:drawable="@r/my_yellow" />
    <item android:drawable="@r/my_yellow" android:state_activated="true" />
</selector>
